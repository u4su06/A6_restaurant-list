<!-- ./views/detail.handlebars -->
<div class="container py-5">
  <div class="text-center mb-5">
    <h1 class="mb-3">{{rest.name}}</h1>
  </div>
  <div class="row mb-3">
    <div class="col-6 mx-auto">
      <p>
        <i class="fas fa-utensils mr-2"></i>{{rest.category}}
        <i class="fas fa-star mx-2"></i>{{rest.rating}}
      </p>
      <p>
        <i class="fas fa-mobile-alt mr-2"></i>{{rest.phone}}
      </p>
      <p>
        <i class="fas fa-map-marker-alt mr-2"></i>{{rest.location}}
      </p>
      <p>
        {{rest.description}}
      </p>
    </div>
  </div>
  <div class="text-center mb-4">
    <img src="{{rest.image}}" alt="Card image cap" style="max-height: 400px;">
  </div>
  <div class="row justify-content-around">
    <div class="col-6 row">
      <span class="mr-2"><a href="/rests/{{ rest._id }}/edit" class="btn btn-outline-dark"><i
            class="fas fa-pen"></i></a></span>
      <span class="mr-auto"><a href="/" class="btn btn-outline-dark"><i class="fas fa-times"></i></a></span>
      <form action="/rests/{{ rest._id }}/delete" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-secondary"><i class="fas fa-trash-alt"></i></button>
      </form>
    </div>
  </div>
</div>